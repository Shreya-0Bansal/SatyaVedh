<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate">

    <!-- Header -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bn"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- Title -->
                <ImageView
                    android:id="@+id/app_logo"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/lg"/>

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/app_name"
                    android:fontFamily="cursive"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Body -->
            <LinearLayout
                android:id="@+id/body_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/blue"
                android:padding="16dp">

                <!-- Welcome Message -->
                <TextView
                    android:id="@+id/welcome_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Welcome"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/karma_bold"
                    android:textSize="19sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="14dp" />

            </LinearLayout>

            <!-- Categories Section -->
            <LinearLayout
                android:id="@+id/categories_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!--Complaint Category -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Image -->
                        <ImageButton
                            android:id="@+id/complaint_category"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:adjustViewBounds="true"
                            android:background="@color/blue"
                            android:scaleType="fitCenter"
                            android:src="@drawable/complaint" />

                        <!-- Edit Text -->
                        <TextView
                            android:id="@+id/complaint_edit_text"
                            android:layout_width="213dp"
                            android:layout_height="44dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0dp"
                            android:fontFamily="@font/karma_bold"
                            android:gravity="center"
                            android:text="COMPLAINT"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/submit"
                            android:layout_width="225dp"
                            android:layout_height="92dp"
                            android:layout_below="@id/complaint_edit_text"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="-7dp"
                            android:layout_marginEnd="0dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/icon_a"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Suggestion Category -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Image -->
                        <ImageButton
                            android:id="@+id/suggestion1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:adjustViewBounds="true"
                            android:background="@color/blue"
                            android:scaleType="fitCenter"
                            android:src="@drawable/suggestions" />

                        <!-- Edit Text -->
                        <TextView
                            android:id="@+id/suggestion"
                            android:layout_width="213dp"
                            android:layout_height="44dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0dp"
                            android:fontFamily="@font/karma_bold"
                            android:gravity="center"
                            android:text="SUGGESTIONS"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/submit1"
                            android:layout_width="216dp"
                            android:layout_height="95dp"
                            android:layout_below="@id/suggestion"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="8dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/icon_a" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Positive com.example.satyavedh.Feedback Category -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Button -->
                        <ImageButton
                            android:id="@+id/feedback"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="-2dp"
                            android:adjustViewBounds="true"
                            android:background="@color/blue"
                            android:scaleType="fitCenter"
                            android:src="@drawable/feedback" />

                        <TextView
                            android:id="@+id/feedback1"
                            android:layout_width="213dp"
                            android:layout_height="44dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0dp"
                            android:fontFamily="@font/karma_bold"
                            android:gravity="center"
                            android:text="FEEDBACK"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/submit_2"
                            android:layout_width="225dp"
                            android:layout_height="108dp"
                            android:layout_below="@id/feedback1"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="-7dp"
                            android:layout_marginEnd="0dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/icon_a" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BottomAppBar -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="2dp"
            app:itemIconSize="60dp"
            app:itemRippleColor="@color/lavender"
            app:labelVisibilityMode="unlabeled"
            android:background="@color/blue"
            app:menu="@menu/bottom_menu" />

</RelativeLayout>